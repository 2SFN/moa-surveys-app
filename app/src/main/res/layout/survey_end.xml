<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="10dp"
    app:contentPadding="8dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/light_green"
    android:layout_margin="10dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--Text View over Card View-->

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Vielen Dank für die Teilnahme!\n\nSie können Ihre Ergebnisse absenden, oder sich nur die Ergebnisse anschauen."
            android:textAlignment="center"
            android:textColor="#fff"
            android:textSize="25sp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/results"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/results"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:background="@drawable/white_border"
            android:contentDescription="Direkt zu den Ergebnissen"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bar_chart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/submit"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:tint="@color/white" />

        <ImageButton
            android:id="@+id/submit"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:background="@drawable/white_border"
            android:contentDescription="Eingaben senden und Ergebnisse anzeigen"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_send"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/results"
            app:layout_constraintTop_toTopOf="@id/results"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/results_label"
            android:layout_marginStart="-12dp"
            android:layout_marginEnd="-12dp"
            android:layout_marginTop="12dp"
            android:text="Ergebnisse anzeigen (Eingaben werden verworfen)"
            android:textColor="@color/light_grey"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="@id/results"
            app:layout_constraintTop_toBottomOf="@id/results"
            app:layout_constraintEnd_toEndOf="@id/results"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit_label"
            android:layout_marginStart="-12dp"
            android:layout_marginEnd="-12dp"
            android:layout_marginTop="12dp"
            android:text="Eingaben senden und Ergebnisse anzeigen"
            android:textColor="@color/light_grey"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            app:layout_constraintStart_toStartOf="@id/submit"
            app:layout_constraintEnd_toEndOf="@id/submit"
            app:layout_constraintTop_toBottomOf="@id/submit"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>